{
    "name": "dertunnel",
    "version": "0.4.4",
    "description": "A ngrok-style tunnel client/server",
    "main": "index.js",
    "scripts": {
        "server": "node -r esbuild-register src/server/index.ts",
        "client": "node -r esbuild-register src/client/cli.ts",
        "token": "node -r esbuild-register src/create-token.ts",
        "test": "jest",
        "compile": "tsc",
        "lint": "eslint src/ --ext .ts",
        "ci": "npm run compile && npm run lint && npm run test && npm run package",
        "bundle": "npm run server:bundle && npm run client:bundle && npm run ui:bundle && npm run client:lib",
        "server:bundle": "esbuild --bundle --minify --platform=node --outfile=./dist/dertunnel-server.js ./src/server/index.ts",
        "client:bundle": "esbuild --bundle --minify --platform=node --outfile=./dist/dertunnel-client.js ./src/client/cli.ts",
        "client:lib": "esbuild --bundle --minify --platform=node --outfile=./packages/dertunnel/index.js ./src/client/client.ts && cd packages/dertunnel && npm pack --pack-destination ../../dist && cd ../..",
        "client:package": "pkg -c ./pkg.client.json ./dist/dertunnel-client.js",
        "server:package": "pkg -c ./pkg.server.json ./dist/dertunnel-server.js",
        "package": "npm run bundle && npm run server:package && npm run client:package",
        "ui:bundle": "esbuild --bundle --minify --sourcemap --outfile=./public/bundle.js ./src/ui/index.tsx",
        "ui:watch": "esbuild --watch --bundle --sourcemap --outfile=./public/bundle.js ./src/ui/index.tsx"
    },
    "keywords": [
        "tunnel"
    ],
    "author": "faulpeltz",
    "license": "MIT",
    "devDependencies": {
        "@types/dns2": "2.0.3",
        "@types/express": "4.17.17",
        "@types/jest": "29.5.0",
        "@types/node": "18.15.11",
        "@types/prompts": "~2.4.4",
        "@typescript-eslint/eslint-plugin": "5.57.0",
        "@typescript-eslint/parser": "5.57.0",
        "esbuild": "0.17.15",
        "esbuild-register": "3.4.2",
        "eslint": "8.37.0",
        "eslint-plugin-jest": "27.2.1",
        "jest": "29.5.0",
        "pkg": "5.8.1",
        "ts-jest": "29.1.0",
        "typescript": "5.0.3"
    },
    "dependencies": {
        "acme-client": "5.0.0",
        "chalk": "4.1.2",
        "commander": "10.0.0",
        "conf": "10.2.0",
        "dns2": "2.1.0",
        "express": "4.18.2",
        "lru-cache": "8.0.4",
        "nanoid": "3.3.4",
        "prompts": "2.4.2",
        "rate-limiter-flexible": "2.4.1"
    }
}
